@page "~/template"
@model TemplateModel
@{
    ViewData["Title"] = Model.Template.Title;
    ViewData["Breadcrumb"] = Model.Breadcrumb;
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-info-circle"></i>
        @Model.Template.Title
        Template
    </div>
    <div class="card-body">
        <form class="needs-validation" novalidate="" method="post" enctype="multipart/form-data">
            <input type="hidden" name="guid" value="@Model.Template.DocumentLink" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="title">Title</label>
                    <input onchange="OnChangeEvent();" type="text" class="mb-3 form-control" name="title" id="title" placeholder="" value="@Model.Template.Title" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat no-repeat;">
                    <div class="invalid-feedback">
                        Valid Title is required.
                    </div>

                    <label for="title">Keywords</label>
                    <input onchange="OnChangeEvent();" type="text" class="mb-3 form-control" name="keywords" id="keywords" placeholder="Short, detailed words seperated by commas work best here!" value="@Model.Template.Keywords" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat no-repeat;">
                    <div class="invalid-feedback">
                        Valid Keywords are required.
                    </div>

                    <label for="description">Description</label>
                    <input onchange="OnChangeEvent();" type="text" class="mb-3 form-control" name="description" id="description" placeholder="" value="@Model.Template.Description" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat no-repeat;">
                    <div class="invalid-feedback">
                        Valid Description is required.
                    </div>

                    <label for="image">Preview Image</label>
                    <input onchange="OnChangeEvent();" type="file" class="mb-3 form-control" name="image" id="image" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat no-repeat;">

                    <label for="template">Template</label>
                    <input onchange="OnChangeEvent();" type="file" class="mb-3 form-control" name="template" id="template" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat no-repeat;">
                </div>
                <div class="col-md-6 mb-3">
                    <img style="width: 100%; height: auto;" src="@Model.GetPreviewImageLink()" />
                </div>
            </div>
            <hr class="mb-4">
            <div class="col-md-3">
                <button id="saveBtn" class="btn btn-primary btn-lg btn-block" type="submit" disabled>Save</button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    function OnChangeEvent() {
        $("#saveBtn").prop('disabled', false);
    }
</script>